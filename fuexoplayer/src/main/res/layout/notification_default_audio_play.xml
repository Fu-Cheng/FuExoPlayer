<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_llRoot"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/media_imgViewIocn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/media_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="标题"/>

        <TextView
            android:id="@+id/media_tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="节目标题"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/media_imgBtnPlayPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:gravity="center"
        android:src="@mipmap/ic_default_play" />

    <ImageButton
        android:id="@+id/media_imgBtnCancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@mipmap/ic_default_clear" />

</LinearLayout>